<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExpenseActivity">

    <TableLayout
        android:id="@+id/tableLayout"
        android:layout_width="368dp"
        android:layout_height="495dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="13dp">

            <TextView
                android:id="@+id/txtExpenseAmount"
                android:layout_width="125dp"
                android:layout_height="wrap_content"
                android:contentDescription="expenseAmount"
                android:text="Amount"
                tools:text="Amount" />

            <EditText
                android:id="@+id/expenseAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Amount"
                android:inputType="numberDecimal"
                tools:layout_editor_absoluteX="44dp"
                tools:layout_editor_absoluteY="31dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txtExpenseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:contentDescription="expenseDate"
                android:text="Date"
                tools:text="Date" />

            <EditText
                android:id="@+id/expenseDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Date"
                android:inputType="text"
                tools:layout_editor_absoluteX="42dp"
                tools:layout_editor_absoluteY="183dp" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/txtSupplier"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="Supplier"
                tools:text="Supplier" />

            <Spinner
                android:id="@+id/Supplier"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginBottom="20dp"
                android:dropDownWidth="match_parent"
                android:textColor="#FF0000"
                android:padding="5dip"
                android:visibility="visible" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:id="@+id/tvProject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project" />

            <Spinner
                android:id="@+id/txtProjectID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="30dp" >

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Account" />

            <Spinner
                android:id="@+id/txtAccountID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btnSubmitExpense"
        android:layout_width="168dp"
        android:layout_height="48dp"
        android:layout_marginStart="105dp"
        android:layout_marginLeft="105dp"
        android:layout_marginBottom="75dp"
        android:text="Submit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Submit" />

</android.support.constraint.ConstraintLayout>